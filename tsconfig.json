{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es6"],
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "downlevelIteration": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false
  },
  "files": [
    "./typings.d.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
